<div class="hero-unit jumbotron ">
<h1>Welcome To My Ruby Blog</h1>
<p>This is some info about our Ruby blog website</p>
<p>
<%= render_shareable :buttons=> ['twitter', 'facebook', 'linkedin'] %>
</p>
</div>

<div class="row-fluid">
            <ul class="thumbnails">
  <li class="span12">
<%@posts.each do |post|%>
		<div class="thumbnail">
		
		<div class="caption">
		<h3><%= link_to post.title , post%></h3>
		<h6>Posted at: <a href="#"><%= link_to time_ago_in_words(post.created_at)+ " ago" , post %> |</a></h6>

		<p><%= post.description %></p>
		<p><%=link_to "Continue reading", post_path(:id => post.id) , :class => "btn btn-primary" %> 
		</div>
		</div>
   

<%end%>
</li>

</ul>
</div>





	

			
